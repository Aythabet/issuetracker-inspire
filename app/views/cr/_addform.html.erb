<%= simple_form_for @cr do |f| %>
  <%= f.input :comment %>
  <h3>Tickets</h3>
  <div id='issues'>
    <%= f.simple_fields_for :issues do |issue| %>
      <%= render 'issue_fields', :f => issue %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add issue', f, :issues %>
    </div>
  </div>
  <%= f.submit 'Save' %>
<% end %>