<h1>Ticket/Issue details</h1>
<div class="table-responsive">
  <table class="table table-sm table-hover">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Ticket ID</th>
        <th scope="col">Projet</th>
        <th scope="col">Ressource</th>
        <th scope="col">Type</th>
        <th scope="col">Estimation</th>
        <th scope="col">RÃ©el</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td align="middle"><% if @issue.retour_test %>
            <%= '<i class="bi bi-bug" style="font-size: 1.15rem;""></i>'.html_safe %>
          <% else %>
            <%= '<i class="bi bi-hammer" style="font-size: 1.15rem;""></i>'.html_safe %>
          <% end %></td>
        <td><%= @issue.jiraid %></td>
        <td><%= link_to @issue.project.name, @issue.project %></td>
        <td><%= link_to @issue.owner.name, @issue.owner %></td>
        <td><%= @issue.issue_type %></td>
        <td><%= @issue.time_forecast %></td>
        <td><%= @issue.time_real %></td>
        <% if current_user.admin == true %>
          <td><%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_issue_path(@issue) %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <%= render "issue_details_from_jira" %>
</div>