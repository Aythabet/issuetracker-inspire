<h1>Team members</h1>
<br/>
<br/>
<div class="table-responsive">
  <table class="table table-sm table-hover table-justified">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Status</th>
        <th scope="col">Last Seen On Jira</th>
        <th scope="col">Date joined JIRA</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td align="middle"><%= link_to '<i class="bi bi-eye-fill" style="font-size: 1.15rem;""></i>'.html_safe, owner %></td>
          <td><%= owner.name %></td>
          <td><%= owner.user.email %></td>
          <td><%= owner.status %></td>
          <td><%= owner.last_seen_on_jira %></td>
          <td><%= owner.date_joined_jira %></td>
          <% if current_user.admin == true %>
            <td align="middle">
              <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_owner_path(owner) %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div align="right" style="font-size: 80%"><%= page_entries_info @owners, entry_name: 'team members' %></div>
    <span class="d-flex flex-row-reverse"><%= link_to_next_page @owners, 'Next' %>&nbsp;&nbsp;<%= link_to_previous_page @owners, 'Previous' %></span>
  </div>
  <br/>
  <br/>
  <%= link_to new_owner_path do %>
    <button type="button" class="btn btn-success btn-lg btn-block">Add a new member</button>
  <% end %>