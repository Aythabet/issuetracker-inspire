<%= simple_form_for @dailyreport do |f| %>
  <h4><%= DateTime.now.strftime("%d/%m/%Y %H:%M")%></h4>
  <%= f.association :owner, selected: current_user.id  %>
  <%= f.fields_for :issues do |issue_fields| %>
    <div class="issues-fields-container">
      <h3>Issues' tasks:</h3>
      <%= render "issues_fields", f: issue_fields %>
    </div>
  <% end %>
  <h3>Other tasks:</h3>
  <br/>
  <%= f.input :comment %>
  <br/>
  <%= f.button :submit, 'Create CR' %>
<% end %>