<%= simple_form_for @dailyreport do |f| %>
  <h4><%= DateTime.now.strftime("%d/%m/%Y %H:%M")%></h4>
  <%= f.association :owner, selected: current_user.id %>
  <h2>Tasks</h2>
  <%= f.simple_fields_for :issues do |issue| %>
    <%= render 'issue_fields', :f => issue %>
  <% end %>
  <br/>
  <div class='links'  align="right">
    <%= link_to_add_association 'Add a task <i class="bi bi-plus-square-fill"></i>'.html_safe, f, :issues %>
  </div>
  <h3>Other issues:</h3>
  <%= f.input :comment %>
  <br/>
  <%= f.submit  'Create CR' %>
<% end %>