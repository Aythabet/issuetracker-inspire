<h1>Issue's Type List</h1>
<br/>
<br/>
<div class="table-responsive">
  <table class="table table-sm table-hover table-justified">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @issue_types.each do |issue_type| %>
        <tr>
          <td align="middle"><i class="bi bi-columns-gap"></i></td>
          <td><%= issue_type.name %></td>
          <td align="middle">
            <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_issue_type_path(issue_type) %>
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, issue_type_path(issue_type), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<br/>
<%= link_to new_issue_type_path do %>
  <button type="button" class="btn btn-success btn-lg btn-block">Add a new issue_type</button>
<% end %>