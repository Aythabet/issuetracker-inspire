<h1>Projects List</h1>
<br/>
<br/>
<div class="table-responsive">
	<table class="table table-sm table-hover table-justified">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Jira ID</th>
				<th scope="col">Name</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			<% @projects.each do |project| %>
			<tr>
				<td><%= link_to project.id, project %></td>
				<td><%= project.jiraid %></td>
				<td><%= project.name %></td>
				<td align="middle">
					<%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_project_path(project) %>
					&nbsp;
					<%= link_to '<i class="bi bi-trash3"></i>'.html_safe, project_path(project), method: :delete %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br/>
<br/>
<%= link_to new_project_path do %>
<button type="button" class="btn btn-success btn-lg btn-block">Add a new Project</button>
<% end %>